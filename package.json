{
  "name": "brain-notebook-pwa",
  "version": "1.0.0",
  "description": "Self-organizing notebook PWA with AI-powered tagging and local-first storage",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src/ --ext .js",
    "format": "prettier --write src/",
    "pwa:generate-sw": "workbox generateSW workbox-config.js"
  },
  "keywords": [
    "pwa",
    "notebook",
    "notes",
    "ai-tagging",
    "local-first",
    "indexeddb",
    "vanilla-javascript"
  ],
  "author": "EanHD",
  "license": "MIT",
  "dependencies": {
    "dexie": "^4.0.1",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "workbox-cli": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EanHD/brain.git"
  },
  "bugs": {
    "url": "https://github.com/EanHD/brain/issues"
  },
  "homepage": "https://github.com/EanHD/brain#readme"
}