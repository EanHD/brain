# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/account/api-keys
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# Application Configuration  
VITE_APP_NAME=Brain
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Self-organizing notebook with AI-powered tagging

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_PERFORMANCE=true
VITE_DEBUG_AI=true

# PWA Configuration
VITE_PWA_NAME=Brain - Self-Organizing Notebook
VITE_PWA_SHORT_NAME=Brain
VITE_PWA_THEME_COLOR=#1a1a1a
VITE_PWA_BACKGROUND_COLOR=#ffffff

# Performance Budgets (milliseconds)
VITE_PERFORMANCE_BUDGET_SAVE=50
VITE_PERFORMANCE_BUDGET_RENDER=200
VITE_PERFORMANCE_BUDGET_SEARCH=120

# Storage Configuration
VITE_DB_NAME=BrainNotebook
VITE_DB_VERSION=1
VITE_CACHE_SIZE=20

# AI Service Configuration
VITE_AI_MODEL=gpt5-nano
VITE_AI_MAX_TOKENS=150
VITE_AI_TEMPERATURE=0.3
VITE_AI_TIMEOUT=2000
VITE_AI_MAX_RETRIES=2

# Review System Configuration
VITE_REVIEW_INTERVALS=7,14,30
VITE_REVIEW_ENABLED=true

# Security Configuration
VITE_PRIVATE_MODE_DEFAULT=false
VITE_SANITIZE_PATTERNS=true

# Deployment Configuration (for GitHub Actions)
DEPLOY_TARGET=github-pages
DEPLOY_BRANCH=gh-pages
DEPLOY_DOMAIN=your-username.github.io